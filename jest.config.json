{
  "preset": "react-native",
  "transformIgnorePatterns": [
    "node_modules/(?!(jest-)?react-native|react-clone-referenced-element|@react-native-community|rollbar-react-native|@fortawesome|@react-native|@react-navigation|toggle-switch-react-native)"
  ],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "verbose": true,
  "setupFilesAfterEnv": ["<rootDir>/__mocks__/jest-mock.ts", "./jestSetup.ts"],
  "moduleNameMapper": {
    "\\.svg": "<rootDir>/__mocks__/svgMock.js"
  }
}
